{
  "name": "@formspec/build",
  "version": "0.1.0-alpha.5",
  "description": "Build tools to compile FormSpec forms to JSON Schema and UI Schema",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/build.d.ts",
  "bin": {
    "formspec-build": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/build.d.ts",
      "import": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && api-extractor run --local",
    "clean": "rm -rf dist temp",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run build && vitest run",
    "api-extractor": "api-extractor run",
    "api-extractor:local": "api-extractor run --local",
    "api-documenter": "api-documenter markdown -i temp -o docs"
  },
  "dependencies": {
    "@formspec/core": "workspace:*"
  },
  "devDependencies": {
    "@formspec/dsl": "workspace:*",
    "vitest": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [],
  "license": "UNLICENSED"
}
