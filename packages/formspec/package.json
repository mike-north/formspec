{
  "name": "formspec",
  "version": "0.1.0-alpha.7",
  "description": "Type-safe form specifications that compile to JSON Schema and JSON Forms UI Schema",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/formspec.d.ts",
  "exports": {
    ".": {
      "types": "./dist/formspec.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && declaration-file-normalizer dist/index.d.ts && api-extractor run --local",
    "clean": "rm -rf dist temp",
    "typecheck": "tsc --noEmit",
    "api-extractor": "api-extractor run",
    "api-extractor:local": "api-extractor run --local",
    "api-documenter": "api-documenter markdown -i temp -o docs"
  },
  "dependencies": {
    "@formspec/core": "workspace:*",
    "@formspec/dsl": "workspace:*",
    "@formspec/build": "workspace:*",
    "@formspec/runtime": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "form",
    "forms",
    "json-schema",
    "json-forms",
    "type-safe",
    "typescript"
  ],
  "license": "UNLICENSED"
}
