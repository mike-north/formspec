{
  "name": "@formspec/eslint-plugin",
  "version": "0.1.0-alpha.7",
  "description": "ESLint rules for FormSpec decorator DSL type safety",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/eslint-plugin.d.ts",
  "exports": {
    ".": {
      "types": "./dist/eslint-plugin.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist temp",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "api-extractor": "api-extractor run",
    "api-extractor:local": "api-extractor run --local",
    "api-documenter": "api-documenter markdown -i temp -o docs"
  },
  "dependencies": {
    "@formspec/constraints": "workspace:*",
    "@typescript-eslint/utils": "^8.0.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/rule-tester": "^8.0.0",
    "vitest": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "UNLICENSED",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "formspec",
    "decorators",
    "typescript"
  ]
}
