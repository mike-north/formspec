{
  "name": "@formspec/transformer",
  "version": "0.1.0-alpha.0",
  "description": "TypeScript transformer for FormSpec runtime type metadata",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "formspec",
    "transformer",
    "typescript",
    "forms",
    "schema"
  ],
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  },
  "license": "UNLICENSED"
}
